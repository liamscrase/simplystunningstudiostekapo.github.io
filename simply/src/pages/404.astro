---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main class="error-page">
    <div class="error-content">
      <h1>404</h1>
      <h2>Page Not Found</h2>
      <p>Sorry, the page you're looking for doesn't exist.</p>
      <a href="/" class="home-link">Return to Home</a>
    </div>
  </main>
</Layout>

<style>
  .error-page {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 60vh;
    padding: 2rem;
  }

  .error-content {
    text-align: center;
    max-width: 600px;
  }

  .error-content h1 {
    font-size: 8rem;
    font-weight: 700;
    margin: 0;
    line-height: 1;
    color: #333;
  }

  .error-content h2 {
    font-size: 2rem;
    margin: 1rem 0;
    color: #555;
  }

  .error-content p {
    font-size: 1.125rem;
    margin: 1.5rem 0 2rem;
    color: #666;
  }

  .home-link {
    display: inline-block;
    padding: 0.875rem 2rem;
    background-color: #333;
    color: white;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 500;
    transition: background-color 0.3s ease;
  }

  .home-link:hover {
    background-color: #555;
  }
</style>
